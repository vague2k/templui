		}) {
			@modules.ExampleWrapper(modules.ExampleWrapperProps{
				ShowcaseFile:      showcase.BadgeVariants(),
				PreviewCodeFile:   "badge_variants.templ",
				ComponentCodeFile: "badge.templ",
			})
			@modules.Usage(modules.UsageProps{
				ComponentName: "Badge",
				PropsExample:  "...",
			})
