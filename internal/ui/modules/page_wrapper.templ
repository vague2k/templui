package modules

import (
	"github.com/axzilla/templui/component/badge"
	"github.com/axzilla/templui/component/breadcrumb"
	"github.com/axzilla/templui/internal/ui/icons"
)

type PageWrapperProps struct {
	Name        string
	Description templ.Component
	Tailwind    bool
	Alpine      bool
	VanillaJS   bool
	Breadcrumbs Breadcrumbs
}

type Breadcrumbs struct {
	Items []BreadcrumbItem
}

type BreadcrumbItem struct {
	Text string
	Path string
}

templ PageWrapper(p PageWrapperProps) {
	<div class="mb-8">
		<div class="mb-4">
			@breadcrumb.Breadcrumb() {
				@breadcrumb.List() {
					for i, path := range p.Breadcrumbs.Items {
						@breadcrumb.Item() {
							if i != 0 {
								@breadcrumb.Separator()
							}
							if i == len(p.Breadcrumbs.Items)-1 {
								@breadcrumb.Page(breadcrumb.ItemProps{Current: true}) {
									{ path.Text }
								}
							} else {
								@breadcrumb.Link(breadcrumb.LinkProps{
									Href: path.Path,
								}) {
									{ path.Text }
								}
							}
						}
					}
				}
			}
		</div>
		<h1 class="text-3xl font-bold mb-2">{ p.Name }</h1>
		<p class="mb-4 text-muted-foreground">
			@p.Description
		</p>
		<div class="flex gap-2 items-baseline">
			if p.Tailwind {
				@badge.Badge(badge.Props{
					Variant: badge.VariantSecondary,
				}) {
					@wrappedicon.Tailwind(16)
					TailwindCSS
				}
			}
			if p.Alpine {
				@badge.Badge(badge.Props{
					Variant: badge.VariantSecondary,
				}) {
					@wrappedicon.Alpine(16)
					Alpine.js
				}
			}
			if p.VanillaJS {
				@badge.Badge(badge.Props{
					Variant: badge.VariantSecondary,
				}) {
					@wrappedicon.JS(16)
					Vanilla JS
				}
			}
		</div>
	</div>
	<div class="space-y-8">
		{ children... }
	</div>
}
