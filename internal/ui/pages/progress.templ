var exampleHTMXPolling = `@components.Progress(components.ProgressProps{
	Value: initialValue,
	Label: "Processing...",
	ShowValue: true,
	Attributes: templ.Attributes{
		"hx-get":     "/api/job/123/progress",
		"hx-trigger": "every 2s",
