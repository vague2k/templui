package layouts

import "github.com/axzilla/templui/internal/ui/modules"
import "github.com/axzilla/templui/component/separator"

templ DocsLayout(title, description string, tocItems []modules.TableOfContentsItem) {
	@BaseLayout(title, description) {
		@modules.TableOfContentsScript()
		<div class="flex flex-col h-screen">
			@modules.AnnouncementBar()
			@modules.Navbar()
			<div class="container mx-auto px-4 flex flex-1 overflow-hidden">
				<div class="hidden lg:block w-64 overflow-y-auto">
					<div class="pt-8 pb-8 pr-4">
						@modules.Sidebar()
					</div>
				</div>
				<main class="flex-1 overflow-y-auto">
					<div class="pt-8 pb-8 px-4">
						<div class="max-w-3xl mx-auto">
							{ children... }
						</div>
					</div>
					@separator.Separator()
					@modules.Footer()
				</main>
				<div class="hidden lg:block w-64 overflow-y-auto">
					<div class="pt-8 pb-8 pl-4">
						@modules.TableOfContents(modules.TableOfContentsProps{
							Items: tocItems,
						})
					</div>
				</div>
			</div>
		</div>
	}
}
