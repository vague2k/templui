package showcase

import "github.com/axzilla/templui/components"

templ SliderWithSteps() {
	<div class="w-full max-w-sm">
		@components.Slider(components.SliderProps{
			ID:          "steps",
			Name:        "steps",
			Label:       "Zoom Level",
			Value:       100,
			Min:         0,
			Max:         200,
			Step:        25,
			ShowValue:   true,
			ValueFormat: "%",
		})
	</div>
}
