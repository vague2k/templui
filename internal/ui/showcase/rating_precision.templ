package showcase

import "github.com/axzilla/templui/internal/components/rating"

templ RatingPrecision() {
	@rating.Rating(rating.Props{
		Value:     1.3,
		ReadOnly:  true,
		Precision: 0.5,
	}) {
		@rating.Group() {
			for i := 1; i <= 5; i++ {
				@rating.Item(rating.ItemProps{
					Value: i,
					Style: rating.StyleStar,
				})
			}
		}
	}
}
